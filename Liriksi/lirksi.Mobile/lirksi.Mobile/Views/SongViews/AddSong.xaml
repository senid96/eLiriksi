<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="lirksi.Mobile.Views.SongViews.AddSong"
             Title="{Binding Title}"
             >
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Title"></Label>
            <Entry x:Name="TitleEntry" Text="{Binding SongReq.Title}"></Entry>

            <Label x:Name="Performer" Text="Select performer"></Label>
            <Picker  x:Name="PerformerPicker" ItemsSource="{Binding PerformerList}" ItemDisplayBinding="{Binding ArtisticName}" SelectedItem="{Binding SelectedPerformer}"  SelectedIndexChanged="PerformerPicker_SelectedIndexChanged"/>

            <Label x:Name="Album" Text="Select album"></Label>
            <Picker x:Name="AlbumPicker" ItemsSource="{Binding AlbumList}" ItemDisplayBinding="{Binding Name}" SelectedItem="{Binding SelectedAlbum}"/>


            <Label Text="Lyrcis"></Label>
            <Editor x:Name="LyricsEntry" HeightRequest="150" Text="{Binding SongReq.Text}"></Editor>

            <Button x:Name="SaveSongBtn" Clicked="SaveSongBtn_Clicked" Text="Save"></Button>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>