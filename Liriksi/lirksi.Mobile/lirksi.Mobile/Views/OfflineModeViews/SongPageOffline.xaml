<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="lirksi.Mobile.Views.OfflineModeViews.SongPageOffline"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="DownloadedSongs" ItemsSource="{Binding SongList}" ItemSelected="DownloadedSongs_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Vertical" VerticalOptions="Start">
                                <Label Text="{Binding Title}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button x:Name="DeleteOfflineSongsBtn" Text="Clear offline cache" Clicked="DeleteOfflineSongsBtn_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>